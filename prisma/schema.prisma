// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dbLite.sql"
}

model User {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  pwdHash String
  role    Int
}

model Book {
  id                Int       @id @default(autoincrement())
  title             String
  yearOfPublication DateTime
  price             Decimal
  author            Author    @relation(fields: [authorId], references: [id])
  authorId          Int
  type              BookType  @relation(fields: [typeId], references: [id])
  typeId            Int
  publisher         Publisher @relation(fields: [publisherId], references: [id])
  publisherId       Int
}

model Publisher {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model BookType {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]

}
